{
  "name": "coc-split-term",
  "version": "0.0.2-development",
  "description": "Toggle localized terminals for each window split with coc.nvim",
  "author": "Siobhan Rossi <siobhan@fastmail.org>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "coc.nvim"
  ],
  "engines": {
    "coc": "^0.0.77"
  },
  "scripts": {
    "lint": "eslint src --ext ts",
    "clean": "rimraf lib",
    "watch": "webpack --watch",
    "build": "webpack",
    "test": "jest",
    "prepare": "npm-run-all clean build"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "semi": true
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "coc.nvim": "^0.0.82",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-split-term configuration",
      "properties": {
        "coc-split-term.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-split-term extension"
        }
      }
    },
    "commands": [
      {
        "command": "coc-split-term.Toggle",
        "title": "Toggle terminal visibility"
      },
      {
        "command": "coc-split-term.Hide",
        "title": "Hide the terminal if it is showing"
      },
      {
        "command": "coc-split-term.Show",
        "title": "Show the terminal if it is not showing"
      },
      {
        "command": "coc-split-term.Destroy",
        "title": "Destroy the terminal"
      }
    ]
  }
}
